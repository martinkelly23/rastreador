{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <h1 align="center">Informe</h1>

    <div class="table-responsive">
      <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ informe.id }}</td>
            </tr>
            <tr>
                <th>Latitud</th>
                <td>{{ informe.latitud }}</td>
            </tr>
            <tr>
                <th>Longitud</th>
                <td>{{ informe.longitud }}</td>
            </tr>
            <tr>
                <th>Altitud</th>
                <td>{{ informe.altitud }}</td>
            </tr>
            <tr>
                <th>Velocidad</th>
                <td>{{ informe.velocidad }}</td>
            </tr>
            <tr>
                <th>Rumbo</th>
                <td>{{ informe.rumbo }}</td>
            </tr>
            <tr>
                <th>Fechayhora</th>
                <td>{% if informe.fechaYHora %}{{ informe.fechaYHora|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
      </table>
    </div>

    <ul>
        <li>
            <a href="{{ path('informe_index') }}">Regresar a la lista</a>
        </li>
        <li>
            <a href="{{ path('informe_edit', { 'id': informe.id }) }}">Editar</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
</div>
{% endblock %}
