{% extends 'base.html.twig' %}

{% block body %}
  <div class="container">
    <section class="content-header">
      <h1>
        RASTREADORES
        <small>Listado de Rastreadores</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-compass"></i> Rastreadores</a></li>
        <li class="active">Listado de rastreadores</li>
      </ol>
    </section>
      <div class="box">
        <div class="box-body">

      <div class="table-responsive">
        <table id="tabla" class="table table-striped table-bordered dt-responsive nowrap">
          <thead>
              <tr>
                  <th>Id</th>
                  <th>Numero</th>
                  <th>Descripcion</th>
                  <th>Acciones</th>
              </tr>
          </thead>
          <tbody>
          {% for rastreador in rastreadors %}
              <tr>
                  <td><a href="{{ path('rastreador_show', { 'id': rastreador.id }) }}">{{ rastreador.id }}</a></td>
                  <td>{{ rastreador.numero }}</td>
                  <td>{{ rastreador.descripcion }}</td>
                  <td>
                      <ul>
                        <div class="tools">
                                <a class="btn btn-primary btn-sm btn-flat" href="{{ path('rastreador_show', { 'id': rastreador.id }) }}"><i class="fa fa-info-circle"></i>&nbsp;Detalles</a>
                                <a class="btn btn-warning btn-sm btn-flat" href="{{ path('rastreador_edit', { 'id': rastreador.id }) }}"><i class="fa fa-edit"></i>&nbsp;Editar</a>
                          </div>
                      </ul>
                  </td>
              </tr>
          {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
    </div>
      <a class="btn btn-success" href="{{ path('rastreador_new') }}"><i class="fa fa-compass"></i>&nbsp;Nuevo Rastreador</a>
  </div>
{% endblock %}
